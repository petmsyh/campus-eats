# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/campus_eats

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Chapa Payment Configuration
CHAPA_SECRET_KEY=your-chapa-secret-key
CHAPA_CALLBACK_URL=http://localhost:3000/api/v1/payments/webhook

# Firebase Configuration (for FCM notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# System Configuration
SYSTEM_COMMISSION_RATE=0.05

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SMS Configuration (Optional - for OTP)
SMS_PROVIDER=africas_talking
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=CAMPUSEATS
